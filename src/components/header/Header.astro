---
import {
  Astronav,
  MenuItems,
  MenuIcon,
  Dropdown,
  DropdownItems,
  StickyHeader,
} from 'astro-navbar';
import { Button } from '@components/starwind/button';
---

<StickyHeader
  class='sticky lg:w-[800px] lg:mx-auto top-0 lg:top-2 border-b z-20 transition-all lg:flex justify-between items-center p-6 lg:py-3 lg:px-4 gap-5'
  scrollY={50}
  defaultClass='py-5 bg-white border-transparent lg:border lg:border-zinc-200 lg:rounded-full'
  activeClass='py-5 bg-white/80 border border-zinc-200 backdrop-blur-lg lg:rounded-full'
>
  <Astronav closeOnClick>
    <div
      class='w-full mx-auto flex flex-col lg:flex-row justify-between lg:items-center gap-8'
    >
      <div class='flex w-full justify-between'>
        <a href='/' class='text-xl hover:font-bold duration-500'>リフキ</a>
        <div class='block lg:hidden'>
          <MenuIcon class='w-8 h-8 text-gray-800' />
        </div>
      </div>
      <MenuItems class='hidden lg:flex'>
        <div
          class='flex flex-col lg:flex-row lg:items-center gap-3 lg:gap-5 text-2xl lg:text-base text-zinc-700'
        >
          <a href='/' class='hover:text-zinc-950'>Home</a>
          <a href='/project' class='hover:text-zinc-950'>Projects</a>
          <div>
            <Dropdown class='group'>
              <button class='flex items-center hover:text-zinc-950'>
                <span>Shop</span>
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  fill='none'
                  viewBox='0 0 24 24'
                  stroke-width='3'
                  stroke='currentColor'
                  class='w-3 h-3 mt-0.5 group-open:rotate-180'
                >
                  <path
                    stroke-linecap='round'
                    stroke-linejoin='round'
                    d='M19.5 8.25l-7.5 7.5-7.5-7.5'></path>
                </svg>
              </button>
              <DropdownItems class='relative'>
                <div
                  class='lg:absolute top-0 p-4 w-full lg:w-auto rounded-xl bg-zinc-100'
                >
                  <ul>
                    <li>
                      <a
                        href='https://rifkya.gumroad.com'
                        class='hover:text-zinc-950'
                        target='_blank'>Gumroad</a
                      >
                    </li>
                    <li>
                      <a
                        href='https://figma.com/@rifkyalamsyah'
                        class='hover:text-zinc-950'
                        target='_blank'>Freebies</a
                      >
                    </li>
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
          </div>
          <a href='/links' class='hover:text-zinc-950'>Links</a>
          <Button href='mailto:rifkyalamsyah30@gmail.com' class='rounded-full'
            >Contact Me</Button
          >
        </div>
      </MenuItems>
    </div>
  </Astronav>
</StickyHeader>
