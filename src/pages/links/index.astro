};

// about me
const a = {
  name: 'Rifky Alamsyah',
  desc: 'UI Designer & Front-End Web Developer, based in Indonesia ðŸ‡®ðŸ‡©',
  text: 'Resume',
  resumeUrl: 'https://read.cv/rifkyalamsyah',
  textTwo: 'Links',
  linkBio: 'https://lynk.id/rifkyalamsyah',
};

// social media
const social = {
  x: ['https://x.com/kya_devs', 'x'],
  ig: ['https://instagram.com/kya.devs', 'IG'],
